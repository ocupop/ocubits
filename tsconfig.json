{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "lib": ["es6", "dom"],
    "outDir": "dist",
    "rootDir": "packages",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
  },
  "include": ["packages"],
  "exclude": ["node_modules", "dist"]
}
